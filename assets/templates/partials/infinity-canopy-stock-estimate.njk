<script type="text/javascript">

    function calculateStock(){
        var widthStock= document.getElementById("widthStock").value;
        var canopyWidthStock = document.getElementById("canopyWidthStock").value=5;


        var ratio = canopyWidthStock/widthStock;
        if(ratio >0)
        {
            var section=parseInt(Math.ceil((widthStock)/Math.ceil(canopyWidthStock)));
            var graphicWidthStock = 20 * canopyWidthStock;
            var length= document.getElementById("length").value;
            var panels=parseInt(Math.round((length)*12/22.5));
          
           // document.getElementById("panels").value=panels;
            var myTableStock= "<table class='table' cellspacing='5' >";
            for (var i=0; i<panels; i++) {
                myTableStock+="<tr'>";
                for(var j=0; j<section; j++){
                    myTableStock+="<td class='graphic_box_stock'>&nbsp;</td>";
                }
                myTableStock+="</tr>";

            }
            myTableStock+="</table>";
              
            
            
            var premFab;
            var satndFab;
            if (parseInt(canopyWidthStock) > parseInt(widthStock) || parseInt(canopyWidthStock) > 12)
            {
                alert('Total Width Cannot Be Less Than 5 Feet');
                return;
            }
			
            else
            {

                if(canopyWidthStock >=4 && canopyWidthStock <=5)
                {
                    premFab= (section*panels*130.00-section);
                    satndFab= (section*panels*100.00-section);
                }
                document.getElementById("showStock").innerHTML= myTableStock;
            }
 
            var explainStock= "<p class='font_stock'><br>You need <b>"+section+"</b> section(s)/row(s) of Infinity Canopy with <b>"+panels+"</b> panels each. The estimate for your canopy is:  <br><br><b> $"+premFab+".00 with Premium Fabric <br>$"+satndFab+".00 with Standard Fabric<br><br>Optional Items: Need one not both.<br>Magnetic Latch, $65.00 ea.<br> Ball Bearing Pulley System, $65 ea.</b></p>";
            document.getElementById("explainStock").innerHTML= explainStock;  
        }
        else
        {
           document.getElementById("explainStock").innerHTML = "<p class='fon'><br> Canopy Width Must Be greater Than Zero</p>";
        }

        var graphicBoxStock = document.getElementsByClassName('graphic_box_stock')
        var calculateddWidthStock = 10 * canopyWidthStock + 'px';
        for(let i = 0; i < graphicBoxStock.length; i++)
        {
          graphicBoxStock[i].style.width = calculateddWidthStock;
        }
    }
</script>
